<Application x:Class="Waf.InformationManager.Assembler.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Waf.InformationManager.Common.Presentation;Component/Resources/CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Workaround for a WPF bug that implicit styles must not be nested in merged dictionaries three levels deep or deeper. -->
            <Style TargetType="Rectangle"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
