                <Grid.Effect>
                    <DropShadowEffect BlurRadius="10" Color="Black" Opacity="0.5" ShadowDepth="5" Direction="0"/>
                </Grid.Effect>
            </Grid>
            
        
                <!-- one Rectangle and Surfacebutton make one "complete" Button-->

