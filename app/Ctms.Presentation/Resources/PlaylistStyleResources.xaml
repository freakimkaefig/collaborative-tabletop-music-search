<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:waf="http://waf.codeplex.com/schemas"
    xmlns:c="clr-namespace:Ctms.Presentation.Converters">

    <DataTemplate x:Key="SurfaceListBoxItemDataTemplate">
        <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="660"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Content="{Binding Result.Song.ArtistName}" Grid.Column="0" Grid.Row="0"/>
            <Label Content="{Binding Result.Song.Title}" Grid.Column="0" Grid.Row="1"/>
            <Label Content="{Binding Duration}" Grid.Column="1" Grid.Row="0"/>
            <!--<Label Content="{Binding Duration}"/>-->
        </Grid>
    </DataTemplate>
