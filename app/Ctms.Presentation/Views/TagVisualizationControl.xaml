        <TextBlock Name="Title" Text="Title"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#369" 
            Grid.Row="0"
            Grid.ColumnSpan="3"/>
        <TextBlock Name="Album" Text="Album"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#369"  
            Grid.Row="1"
            Grid.ColumnSpan="3"/>
        <Ellipse Width="70" Height="70" Fill="#046" Stroke="#09f" StrokeThickness="4"  
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="1"/>
        <TextBlock Name="Volume" Text="100%"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Foreground="#369"  
            Grid.Row="2"
            Grid.Column="2"
            Grid.ColumnSpan="1"/>
        <TextBlock Name="Artist" Text="Artist"
            VerticalAlignment="Top"
            HorizontalAlignment="Center"
            Foreground="#369"  
            Grid.Row="3"
            Grid.ColumnSpan="3"/>
    </Grid>

</s:TagVisualization>