    Loaded="SimpleVisualization_Loaded" >

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="../../Resources/Images/Search/record.png" Opacity="1.0"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Button Content="Home" Name="HomeButton" HorizontalAlignment="Left" Grid.Row="0" Command="{Binding SelectOptionCmd}" CommandParameter="1"/>
        <Button Content="Breadcrumb" Command="{Binding SelectOptionCmd}" CommandParameter="1" Grid.Row="0" HorizontalAlignment="Right"/>

        <!--<Button Content="{Binding Button1}" Height="40" Width ="100" Grid.Row="1"></Button>
